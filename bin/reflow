#!/usr/bin/env python3

import argparse
import csv
import textwrap

MAX_WIDTH = 27

MAPPINGS = {
    "\n": "◙",
    "?": "？",
    "  ": " ",
    " .": ".",
}


def main():
    parser = argparse.ArgumentParser("NLPP text reflowing tool")
    parser.add_argument(
        "input", type=argparse.FileType("r", encoding="utf8"), help="Input CSV file"
    )
    parser.add_argument(
        "output", type=argparse.FileType("w", encoding="utf8"), help="Output CSV file"
    )
    args = parser.parse_args()

    writer = csv.writer(args.output)

    for idx, jap, eng in csv.reader(args.input):
        orig = eng
        for a, b in MAPPINGS.items():
            eng = eng.replace(a, b)

        eng = textwrap.wrap(eng, width=MAX_WIDTH)
        writer.writerow([idx, jap, eng])


if __name__ == "__main__":
    main()
